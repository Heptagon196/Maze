# 游戏模式有三种，Overview，Explore，Torch
# Overview 显示整个地图
# Explore 显示已探索区域
# Torch 只显示附近区域
setGamemode(Torch);
# 视野
setHorizon(2);
# 指定 Editor 地图所使用的编辑器
# 用 := 定义时只会是本脚本内有效的局部变量，要让其他脚本访问需使用 global 来定义
if (LINUX) {
    global(Editor, "vim");
} else {
    global(Editor, "code");
}
# 背景变白色
color(BLACK, WHITE);
println();
clearscreen();
# 调用脚本
if (size(args) == 1) {
    exec("maps/Select/main.gos");
} else {
    setMap(args[1]);
    exec("maps/" + args[1] + "/main.gos", args);
}
